<!--HTML that holds the content of the game being rated  -->
<div class="container">
  <div class="col-md-8 col-md-offset-2">
    <div class="row well">
      <div class="col-md-6">
        <h4>Game Title:{{game.name}}</h4>
        <img src="{{game.image}}" alt="" class="img-responsive">
      </div>
      <div class="col-md-6">
        <br><br><br>
        {{game.description}}
        <button type="button" class="btn btn-default" {{action "addToCart"}}>
            favorite Game
        </button>
        {{#link-to "game" game.id}}Go to Reviews{{/link-to}}
      </div>
    </div>
  </div>
</div>
