{{#if addNewGame}}
<form>
  <div class="form-group">
    <label for="name">Name</label>
    {{input value=name id="name" placeholder="Game name" class="form-control"}}
  </div>
  <div class="form-group">
    <label for="description">description</label>
  {{textarea name="name" rows="5" cols="80" value=description id="description"  placeholder="Game description" class="form-control"}}
  </div>
  <div class="form-group">
    <label for="image">Image</label>
    {{input value=image id="image"  placeholder="image URL" class="form-control"}}
  </div>
  <button type="button" class="btn btn-default" {{action "saveGame"}}> Add Game</button>
</form>
{{else}}
<button type="button" class="btn btn-default" {{action "showGameForm"}}>
  Add Game
</button>
{{/if}}
