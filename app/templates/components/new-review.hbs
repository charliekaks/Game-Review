{{#if addNewReview}}
<form>
  <div class="form-group">
    <label for="comment">Comment</label>
    {{textarea name="name" rows="8" cols="80" value=comment id="comment" class="form-control"}}
  </div>
  <div class="form-group">
    <label for="reviewer"></label>
    {{input type="text" class="form-control" id="" placeholder="" value=reviewer id ="reviewer" class="form-control"}}
  </div>
  <button type="button" class="btn btn-default" {{action "saveReview"}}></button>
</form>
{{else}}
<button type="button" class="btn btn-default" {{action "showReviewForm"}}>
  Review Game
</button>
{{/if}}
